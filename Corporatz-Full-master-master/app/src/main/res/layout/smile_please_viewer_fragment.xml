<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.SmilePlease.SmilePleaseViewer">

    <Button
        android:id="@+id/post_picture_button"
        style="?android:textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/blue"

        android:text="Post a picture"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <ProgressBar
        android:id="@+id/smile_progress_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/smile_recyclerview"

        android:layout_below="@+id/post_picture_button">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>